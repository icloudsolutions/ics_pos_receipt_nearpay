<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--        Pos receipt print out template-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.ics_pos_receipt_nearpay
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="inside">
                <!-- Inside the existing <xpath expr="//block[@id='pos_payment_section']" position="inside"> -->
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="nearpay_receipt_info"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="nearpay_receipt_info"/>
                        <div class="text-muted">Show NearPay transaction details on receipt</div>
                    </div>
                </div>                
            </xpath>
        </field>
    </record>
</odoo>
